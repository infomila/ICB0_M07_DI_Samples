    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    >

    <StackPanel Padding="20" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
